<div data-test-input class='input-box input-box--btn'>
  <label data-test-label class='label' for={{@name}}>{{@field}}</label>
  {{#if @required}}
    <span data-test-required class='required'>*</span>
  {{/if}}
  <input
    data-test-input-field
    name={{@name}}
    class='input__field user-input input-regular {{@classDisableInput}}'
    type={{@type}}
    id={{@name}}
    placeholder={{@placeHolder}}
    required={{@required}}
    value={{@value}}
    {{on 'input' @onInput}}
  />
  {{#if @hasButtonInsideInput}}
    <Reusables::Button
      @text='Generate Username'
      @variant='dark'
      @classGenerateUsername='generateUsername'
      @onClick={{@onClickGetUsername}}
      @disabled={{@isValid}}
      @test='submit'
      @type='button'
    />
  {{/if}}
</div>